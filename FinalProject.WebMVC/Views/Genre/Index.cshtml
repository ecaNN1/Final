@model List<FinalProject.Service.Models.VMs.GetGenreVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<p>
    <a asp-action="Create">Create</a>
</p>
<table class="table">
    <thead>
        <th>
            Id
        </th>
        <th>
            Name
        </th>
        <th>
            Description
        </th>
        <th></th>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    @Html.ActionLink("Edit","Edit", new {id = item.Id}) |
                    @Html.ActionLink("Delete","Delete", new {id = item.Id}) |
                </td>
            </tr>
        }
    </tbody>
</table>

